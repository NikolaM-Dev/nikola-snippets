{
  "Insert a CSS variable": {
    "prefix": "var",
    "body": "var(--${1:name}): ${2:value};\n"
  },
  "Insert rgb value": {
    "prefix": "rgb",
    "body": "rgb(${1:red}, ${2:green}, ${3:blue});\n"
  },
  "Insert rgba value": {
    "prefix": "rbga",
    "body": "rgba(${1:red}, ${2:green}, ${3:blue}, ${4:alpha});\n"
  },
  "Insert hsl value": {
    "prefix": "hsl",
    "body": "hsl(${1:hue}, ${2:saturation}, ${3:lightness});\n"
  },
  "Insert hsla value": {
    "prefix": "hsla",
    "body": "hsl(${1:hue}, ${2:saturation}, ${3:lightness}, ${4:alpha);\n"
  }
}
